<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.synapticweb.cipherpass">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="net.synapticweb.cipherpass.CipherPassApp">

        <activity android:name="net.synapticweb.cipherpass.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- https://stackoverflow.com/questions/11543287/android-getsearchableinfogetcomponentname-returning-null -->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <service android:name=".autofill.CipherPassService"
            android:label="@string/service_label"
            android:permission="android.permission.BIND_AUTOFILL_SERVICE">
        <intent-filter>
            <action android:name="android.service.autofill.AutofillService" />
        </intent-filter>

            <meta-data
                android:name="android.autofill"
                android:resource="@xml/service_conf" />
        </service>

        <activity android:name=".autofill.AutofillActivity" />

    </application>

</manifest>
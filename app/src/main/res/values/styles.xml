<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="addedit_field">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    
    <style name="detail_field">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="detail_start_image">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:alpha">0.7</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="detail_item_caption">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="detail_item_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="detail_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:alpha">0.7</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/md_transparent</item>
    </style>

    <!--https://stackoverflow.com/a/26852454/6192350
     https://stackoverflow.com/a/33339119/6192350-->
    <!--Controlează culoarea butoanelor, inclusiv back arrow:-->
    <style name="toolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">#fff</item>
    </style>

    <!--Controlează culoarea textului titlului:-->
    <style name="toolbarStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="titleTextColor">#fff</item>
    </style>

    <style name="ctStyleCollapsed" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="ctStyleExpanded" parent="ctStyleCollapsed">
        <item name="android:textSize">30sp</item>
    </style>

</resources>